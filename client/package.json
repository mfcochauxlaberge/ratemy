{
  "scripts": {
    "build": "snowpack build",
    "test": "echo \"This template does not include a test runner by default.\" && exit 1",
    "format": "prettier --write \"**/*.{md,js,jsx,ts,tsx,json,css,scss,svelte,html}\"",
    "format-watch": "onchange \"**/*.{md,js,jsx,ts,tsx,json,css,scss,svelte,html}\" -- prettier --write {{changed}}",
    "start": "concurrently --kill-others \"snowpack dev\" \"npm:*-watch\""
  },
  "devDependencies": {
    "@snowpack/plugin-svelte": "^3.7.0",
    "concurrently": "^6.2.0",
    "onchange": "^7.1.0",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.3.1",
    "snowpack": "^3.3.7"
  },
  "dependencies": {
    "svelte": "^3.40.2"
  }
}
